<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gongxm.bookreader">

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.ListActivity"/>
        <activity android:name=".activities.BookDetailActivity"/>
        <activity android:name=".activities.SearchActivity"/>
        <activity android:name=".activities.RankActivity"/>
        <activity android:name=".activities.BookSourceListActivity"/>
        <activity android:name=".activities.BookChapterListActivity"/>
        <activity android:name=".activities.BookReadActivity"/>
    </application>

</manifest>